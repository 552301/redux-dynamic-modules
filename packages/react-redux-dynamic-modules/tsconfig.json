{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "declaration": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "jsx": "react",
        "rootDir": "src",
        "outDir": "lib"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/__tests__/**/*.ts"
    ]
}